<!DOCTYPE html>
<html>
<head>
  <title>UltiShaper</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
    <% unless Rails.env.production? %>
    <script type="text/javascript">
    window.onkeydown = myKeyEvent;
    function myKeyEvent(e){
      var keyCode = e.keyCode;
      switch(keyCode) {
        case 67:// Ctrl-c edit controller
          if(e.ctrlKey) {
          document.location = "subl://open?url=file://<%= Rails.root.join('app','controllers',params[:controller]+"_controller.rb") %>&line=1&column=1";
          }
          break;
        case 86:// Ctrl-v edit view
          if(e.ctrlKey) {
          
          document.location = ("subl://open?url=file://<%= Rails.root.join('app','views',params[:controller]+"/"+params[:action]+".html.erb") %>&line=1&column=1");
          }
          break;
        default:
        // console.log(keyCode) %>");
        break;
      }
    }
    // $("h1").on("mouseover",function(){console.log("mo")});
    console.log("<%= params[:controller]+"#"+params[:action] %>");
    </script>
    <% end %>
</head>
<body>

<%= yield %>

</body>
</html>
